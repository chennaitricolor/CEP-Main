{
  "functions": {
    "predeploy": [
      "npm --prefix ./functions/ run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "nammaChennai"
      }
    ]
  }
}
